<controls:EmbyPage x:Class="Emby.Mobile.Universal.Views.FirstRun.FirstConnectView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:local="using:Emby.Mobile.Universal.Views.FirstRun"
                   xmlns:controls="using:Emby.Mobile.Universal.Controls"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   mc:Ignorable="d">

    <Grid Background="{ThemeResource EmbyWhiteSmokeBrush}">
        <RelativePanel>
            <Border x:Name="Logo"
                    Background="{StaticResource EmbyDarkGrayBrush}"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True">
                <Image RelativePanel.AlignTopWithPanel="True"
                       Margin="10,20"
                       MaxHeight="100"
                       Source="ms-appx:///Assets/logoLight.png" />
            </Border>
            <TextBlock x:Name="AboutConnect"
                       Text="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelMbConnectDescriptionPara1}"
                       RelativePanel.Below="Logo"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       TextWrapping="WrapWholeWords"
                       Margin="10,20,10,0"
                       Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBlock x:Name="HasAccountText"
                       Text="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelEmbyConnectAlreadyGotAccount}"
                       RelativePanel.Below="AboutConnect"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       TextWrapping="WrapWholeWords"
                       Margin="10"
                       Style="{StaticResource SubtitleTextBlockStyle}" />
            <Button x:Name="LoginButton"
                    Style="{StaticResource EmptyButtonStyle}"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.Below="HasAccountText"
                    ClickMode="Release"
                    Click="LoginButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="30"
                            Height="60"
                            Width="60"
                            Background="{StaticResource EmbyGreenBrush}"
                            Margin="10,0">
                        <TextBlock Style="{StaticResource Mdl2Style}"
                                   Text="{StaticResource Account}"
                                   FontSize="30"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"></TextBlock>
                    </Border>
                    <TextBlock Text="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelLogIn}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{StaticResource SubheaderTextBlockStyle}" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="SignUpText"
                       Text="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelMbConnectFreeAccount}"
                       RelativePanel.Below="LoginButton"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       TextWrapping="WrapWholeWords"
                       Margin="10,10,10,0"
                       Style="{StaticResource SubtitleTextBlockStyle}" />
            <HyperlinkButton x:Name="SignUpButton"
                             Content="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelSignUp}"
                             RelativePanel.Below="SignUpText"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,20"
                             RelativePanel.AlignHorizontalCenterWithPanel="True"
                             ClickMode="Release"
                             Click="SignUpButton_Click" />
            <Image Height="120"
                   RelativePanel.AlignBottomWithPanel="True"
                   RelativePanel.AlignLeftWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True"
                   Stretch="UniformToFill"
                   Source="ms-appx:///Assets/Backdrops/EmbyRandomAvatars.jpg" />
            <Button x:Name="ManualConnectButton"
                    Style="{StaticResource EmptyButtonStyle}"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,25"
                    ClickMode="Release"
                    Click="ManualConnectButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="20"
                            Height="40"
                            Width="40"
                            Background="{StaticResource EmbyDarkGrayBrush}"
                            Margin="10,0">
                        <TextBlock Style="{StaticResource Mdl2Style}"
                                   Text="{StaticResource Pen}"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"></TextBlock>
                    </Border>
                    <TextBlock Text="{x:Bind Converter={StaticResource LocalizationConverter}, ConverterParameter=LabelSkip}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{StaticResource TitleTextBlockStyle}" />
                </StackPanel>
            </Button>
        </RelativePanel>
    </Grid>
</controls:EmbyPage>
