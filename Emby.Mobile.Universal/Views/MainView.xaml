<controls:EmbyPage x:Class="Emby.Mobile.Universal.Views.MainView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:controls="using:Emby.Mobile.Universal.Controls"
                   xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                   xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                   xmlns:entities="using:Emby.Mobile.ViewModels.Entities"
                   xmlns:data="using:Emby.Mobile.Universal.Data"
                   mc:Ignorable="d"
                   DataContext="{Binding Main, Source={StaticResource Locator}}">
    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding PageLoadedCommand}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Page.Resources>
        <!--<data:UserViewDataTemplateSelector x:Key="UserViewDataTemplateSelector">
            <data:UserViewDataTemplateSelector.DefaultTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </data:UserViewDataTemplateSelector.DefaultTemplate>
        </data:UserViewDataTemplateSelector>-->
    </Page.Resources>

    <Grid>
        <GridView ItemsSource="{x:Bind Main.UserViews, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="entities:UserViewViewModel">
                    <Grid BorderBrush="{ThemeResource ContrastBackgroundBrush}"
                          BorderThickness="1"
                          Background="{ThemeResource BackgroundBrush}"
                          Height="200"
                          Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <ProgressRing IsActive="{x:Bind ProgressIsVisible, Mode=OneWay}"
                                          Visibility="{x:Bind ProgressIsVisible, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                            <!--<ContentPresenter ContentTemplateSelector="{StaticResource UserViewDataTemplateSelector}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"/>-->
                            <Viewbox Stretch="UniformToFill"
                                     StretchDirection="DownOnly"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <controls:VariableGridView ItemsSource="{x:Bind Items, Mode=OneWay}"
                                                           VerticalAlignment="Stretch"
                                                           HorizontalAlignment="Stretch">
                                    <controls:VariableGridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid ItemWidth="177"
                                                                   ItemHeight="266"
                                                                   Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </controls:VariableGridView.ItemsPanel>
                                    
                                    <controls:VariableGridView.ItemTemplate>
                                        <DataTemplate x:DataType="entities:ItemViewModel">
                                            <Grid Background="Red"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch">
                                                <TextBlock Text="{x:Bind Name, Mode=OneWay}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </controls:VariableGridView.ItemTemplate>
                                </controls:VariableGridView>
                            </Viewbox>
                        </Grid>

                        <Border Background="{ThemeResource ContrastBackgroundBrush}"
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</controls:EmbyPage>
