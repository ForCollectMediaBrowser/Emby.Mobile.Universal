<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Emby.Mobile.Universal.Controls"
                    xmlns:mediaPlayers="using:Emby.Mobile.Universal.Controls.MediaPlayers">

    <Style TargetType="controls:EmbyApplicationFrame">
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:EmbyApplicationFrame">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <mediaPlayers:MediaFoundationVideoPlayer Grid.Row="1" />
                        <controls:HeaderControl x:Name="Header"
                                                VerticalAlignment="Top" />

                        <ContentControl x:Name="Content"
                                        Grid.Row="1"
                                        Content="{TemplateBinding Content}"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch" />
                        <controls:StatusBarControl VerticalAlignment="Top"
                                                   x:Name="StatusBar"
                                                   Grid.RowSpan="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
