<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Emby.Mobile.Universal.Controls">

    <Style TargetType="controls:EmbyApplicationFrame">
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:EmbyApplicationFrame">
                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          DataContext="{Binding Burger, Source={StaticResource Locator}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <SplitView DisplayMode="Inline"
                                   OpenPaneLength="250"
                                   IsPaneOpen="{Binding BurgerIsVisible}"
                                   Grid.Row="1">
                            <SplitView.Pane>
                                <controls:BurgerMenuControl HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Width="250" />
                            </SplitView.Pane>

                            <SplitView.Content>
                                <ContentControl Content="{TemplateBinding Content}"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch" />
                            </SplitView.Content>
                        </SplitView>
                        <controls:StatusBarControl Grid.RowSpan="2" VerticalAlignment="Top"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
