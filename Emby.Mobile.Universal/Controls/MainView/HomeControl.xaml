        <DataTemplate x:Key="SmallSquareTemplate"
                      x:DataType="entities:ItemViewModel">
            <Grid Height="100"
                  Width="100"
                  IsTapEnabled="True">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{x:Bind NavigateToItem}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <controls:EmbyImage Source="{x:Bind PrimaryImageMedium, Mode=OneWay}"
                                    Stretch="UniformToFill"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="MediumSquareTemplate"
                      x:DataType="entities:ItemViewModel">
