<UserControl x:Class="Emby.Mobile.Universal.Controls.MainView.UserViewsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Emby.Mobile.Universal.Controls.MainView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="200"
             xmlns:controls="using:Emby.Mobile.Universal.Controls"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:entities="using:Emby.Mobile.ViewModels.Entities"
             DataContext="{Binding UserViews, Source={StaticResource Locator}}">

    <Grid>
        <GridView ItemsSource="{x:Bind Views.UserViews, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="entities:UserViewViewModel">
                    <Grid BorderBrush="{ThemeResource ContrastBackgroundBrush}"
                          BorderThickness="1"
                          Background="{ThemeResource BackgroundBrush}"
                          Height="250"
                          Width="360">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1"
                              HorizontalAlignment="Left">
                            <ProgressRing IsActive="{x:Bind ProgressIsVisible, Mode=OneWay}"
                                          Visibility="{x:Bind ProgressIsVisible, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                            <Viewbox Stretch="Uniform"
                                     StretchDirection="DownOnly"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Top"
                                     Visibility="{x:Bind ProgressIsVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}">
                                <controls:EmbyGridView ItemsSource="{x:Bind Items, Mode=OneWay}"
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Stretch"
                                                       Width="700">
                                    <controls:EmbyGridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid ItemHeight="119"
                                                                   ItemWidth="230"
                                                                   Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </controls:EmbyGridView.ItemsPanel>

                                    <controls:EmbyGridView.ItemTemplate>
                                        <DataTemplate x:DataType="entities:ItemViewModel">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Button Style="{StaticResource EmptyButtonStyle}"
                                                        ClickMode="Release"
                                                        Command="{x:Bind NavigateToItem}">
                                                    <Grid HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Stretch"
                                                          Background="{StaticResource EmbyGreenBrush}">
                                                        <Image Source="{x:Bind BackdropImageMedium, Mode=OneWay}"
                                                               Stretch="UniformToFill"
                                                               HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Top" />
                                                    </Grid>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </controls:EmbyGridView.ItemTemplate>
                                </controls:EmbyGridView>
                            </Viewbox>
                        </Grid>

                        <Button Style="{StaticResource EmptyButtonStyle}"
                                ClickMode="Release"
                                Command="{x:Bind NavigateToItem}"
                                Grid.Row="0"
                                VerticalAlignment="Top">
                            <StackPanel Background="{ThemeResource ContrastBackgroundBrush}"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                <TextBlock Text="{x:Bind Name, Mode=OneWay}"
                                           Style="{StaticResource HeaderTextBlockStyle}"
                                           Margin="12,0"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{StaticResource ChevronRight}"
                                           Style="{StaticResource SubheaderTextBlockStyle}"
                                           FontFamily="Segoe MDL2 Assets"
                                           VerticalAlignment="Bottom"
                                           Margin="-7,0,0,11"
                                           FontSize="24" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</UserControl>
